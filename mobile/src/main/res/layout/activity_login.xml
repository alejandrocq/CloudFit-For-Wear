    <ImageView
        android:id="@+id/cloudFitImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_cloudfit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"/>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:id="@+id/userEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/ic_account_circle_black_24dp"
        app:mtf_labelColor="@color/md_grey_200"
        android:layout_below="@id/cloudFitImg"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:textColor="@color/md_black_1000"
            android:textColorHint="@color/md_grey_500"
            android:textSize="15sp"
            android:inputType="text"/>

    </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:id="@+id/passEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/ic_lock_outline_black_24dp"
        app:mtf_labelColor="@color/md_grey_200"
        android:layout_below="@id/userEditText"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textColor="@color/md_black_1000"
            android:textColorHint="@color/md_grey_500"
            android:textSize="15sp"
            android:inputType="textPassword"/>

    </com.github.florent37.materialtextfield.MaterialTextField>

